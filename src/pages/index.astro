---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";
import { Card, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";

const breadcrumbItems = [
  { title: "Home" },
];

const categories = [
  {
    title: "General Utilities",
    description: "Essential tools for everyday development tasks",
    url: "/general-utilities",
    icon: "BriefcaseBusiness",
  },
  {
    title: "Encoding & Decoding",
    description: "Transform data between different encoding formats",
    url: "/encoding-decoding", 
    icon: "KeySquare",
  },
  {
    title: "Data Conversion",
    description: "Convert between various data formats and structures",
    url: "/data-conversion",
    icon: "FileCode2",
  },
  {
    title: "Code Formatting",
    description: "Beautify and minify your code",
    url: "/code-formatting",
    icon: "Paintbrush",
  },
  {
    title: "Analysis & Debugging",
    description: "Tools for analyzing and debugging your code",
    url: "/analysis-debugging",
    icon: "BugPlay",
  }
];
---

<BaseLayout title="Tools">
	<SidebarLayout client:load header={breadcrumbItems}>
		<div class="container mx-auto p-6">
			<div class="mb-8">
				<h1 class="text-3xl font-bold mb-2">Developer Toolbox</h1>
				<p class="text-muted-foreground">A comprehensive collection of development tools to boost your productivity</p>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{categories.map((category) => (
					<a href={category.url} class="block group">
						<Card className="hover:shadow-md transition-shadow duration-200 h-full">
							<CardHeader>
								<CardTitle className="group-hover:text-primary transition-colors">
									{category.title}
								</CardTitle>
								<CardDescription>
									{category.description}
								</CardDescription>
							</CardHeader>
						</Card>
					</a>
				))}
			</div>
		</div>
	</SidebarLayout>
</BaseLayout>