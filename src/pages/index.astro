---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";

const breadcrumbItems = [
  { title: "Home" },
];

const categories = [
  {
    title: "General Utilities",
    description: "Essential tools for everyday development tasks",
    url: "/general-utilities",
    icon: "BriefcaseBusiness",
  },
  {
    title: "Encoding & Decoding",
    description: "Transform data between different encoding formats",
    url: "/encoding-decoding", 
    icon: "KeySquare",
  },
  {
    title: "Data Conversion",
    description: "Convert between various data formats and structures",
    url: "/data-conversion",
    icon: "FileCode2",
  },
  {
    title: "Code Formatting",
    description: "Beautify and minify your code",
    url: "/code-formatting",
    icon: "Paintbrush",
  },
  {
    title: "Analysis & Debugging",
    description: "Tools for analyzing and debugging your code",
    url: "/analysis-debugging",
    icon: "BugPlay",
  }
];
---

<BaseLayout title="Tools">
	<SidebarLayout client:load header={breadcrumbItems}>
		<div class="p-6">
			<h1 class="text-3xl font-bold mb-2">Developer Toolbox</h1>
			<p class="text-muted-foreground mb-8">A comprehensive collection of development tools to boost your productivity</p>
			
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{categories.map((category) => (
					<a href={category.url} class="block group hover:no-underline">
						<div class="rounded-xl border bg-card text-card-foreground shadow hover:shadow-lg transition-shadow group-hover:border-primary/20">
							<div class="flex flex-col space-y-1.5 p-6">
								<h3 class="font-semibold leading-none tracking-tight group-hover:text-primary transition-colors">{category.title}</h3>
								<p class="text-sm text-muted-foreground">{category.description}</p>
							</div>
						</div>
					</a>
				))}
			</div>
		</div>
	</SidebarLayout>
</BaseLayout>