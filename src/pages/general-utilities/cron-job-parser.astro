---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";
import CronJobParser from "@/components/CronJobParser";

const breadcrumbItems = [
  { title: "Home", href: "/" },
  { title: "General Utilities", href: "/general-utilities" },
  { title: "Cron Job Parser" },
];
---

<BaseLayout title="Cron Job Parser">
  <SidebarLayout client:only="react" header={breadcrumbItems}>
    <div class="container mx-auto p-6">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">Cron Job Parser</h1>
        <p class="text-muted-foreground">Parse and validate cron expressions, see field breakdowns and next execution times</p>
      </div>
      
      <CronJobParser client:only="react" />
    </div>
  </SidebarLayout>
</BaseLayout>