---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";
import ColorConverter from "@/components/ColorConverter";

const breadcrumbItems = [
    { title: "Home", href: "/" },
    { title: "General Utilities", href: "/general-utilities" },
    { title: "Color Converter"},
];
---

<BaseLayout title="Color Converter">
	<SidebarLayout client:only="react" header={breadcrumbItems}>
		<div class="container mx-auto p-6 max-w-2xl">
			<div class="mb-8">
				<h1 class="text-3xl font-bold mb-2">Color Converter</h1>
				<p class="text-muted-foreground">Convert colors between different formats: name, hex, RGB, HSL, and CMYK</p>
			</div>
			
			<ColorConverter client:load />
		</div>
	</SidebarLayout>
</BaseLayout>