---
import "../../styles/globals.css";
import SidebarLayout from "@/layouts/sidebarLayout";
import PasswordGenerator from "@/components/PasswordGenerator";

const breadcrumbItems = [
    { title: "Home", href: "/" },
    { title: "General Utilities", href: "/general-utilities" },
    { title: "Password Generator"},
];
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Password Generator</title>
</head>
<body>
	<SidebarLayout client:only="react" header={breadcrumbItems}>
		<div class="container mx-auto p-6 max-w-2xl">
			<div class="mb-8">
				<h1 class="text-3xl font-bold mb-2">Password Generator</h1>
				<p class="text-muted-foreground">Generate secure passwords with customizable options</p>
			</div>
			
			<PasswordGenerator client:load />
		</div>
	</SidebarLayout>
</body>
</html>