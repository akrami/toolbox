---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";
import LineSortDedupe from "@/components/LineSortDedupe";

const breadcrumbItems = [
    { title: "Home", href: "/" },
    { title: "General Utilities", href: "/general-utilities" },
    { title: "Line Sort & Dedupe"},
];
---

<BaseLayout title="Line Sort & Dedupe">
	<SidebarLayout client:only="react" header={breadcrumbItems}>
		<div class="container mx-auto p-6 max-w-4xl">
			<div class="mb-8">
				<h1 class="text-3xl font-bold mb-2">Line Sort & Dedupe</h1>
				<p class="text-muted-foreground">Sort lines alphabetically and remove duplicate entries from your text</p>
			</div>
			
			<LineSortDedupe client:load />
		</div>
	</SidebarLayout>
</BaseLayout>