---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SidebarLayout from "@/layouts/sidebarLayout";
import RandomStringGenerator from "@/components/RandomStringGenerator";

const breadcrumbItems = [
    { title: "Home", href: "/" },
    { title: "General Utilities", href: "/general-utilities" },
    { title: "Random String Generator"},
];
---

<BaseLayout title="Random String Generator">
	<SidebarLayout client:only="react" header={breadcrumbItems}>
		<div class="container mx-auto p-6 max-w-2xl">
			<div class="mb-8">
				<h1 class="text-3xl font-bold mb-2">Random String Generator</h1>
				<p class="text-muted-foreground">Generate random strings with customizable options</p>
			</div>
			
			<RandomStringGenerator client:load />
		</div>
	</SidebarLayout>
</BaseLayout>